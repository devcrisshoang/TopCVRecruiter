<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded_corner_green"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <ImageButton
            android:id="@+id/post_edit_back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:background="@drawable/icon_rounded_corner"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/back_ic" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Edit article here"
            android:textColor="@color/green_color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:background="@drawable/icon_rounded_corner"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/back_ic" />
    </LinearLayout>

    <EditText
        android:id="@+id/article_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Article Name"
        android:padding="12dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:layout_marginBottom="12dp"
        android:textSize="16sp"
        android:gravity="start|top" />

    <EditText
        android:id="@+id/content_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Content"
        android:padding="12dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:layout_marginBottom="24dp"
        android:textSize="16sp"
        android:layout_weight="1"
        android:minLines="6"
        android:gravity="start|top" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@color/green_color"
        android:text="Save" />
</LinearLayout>
