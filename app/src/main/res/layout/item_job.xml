<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_rounded_corner_green"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/job_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/icon_rounded_corner"
        android:padding="10dp"
        android:src="@drawable/fpt_ic" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Job Name -->
        <TextView
            android:id="@+id/job_jobNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job 1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textAlignment="center"/>

        <!-- Working Experience Requirement -->
        <TextView
            android:id="@+id/job_experienceRequirementTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="experience"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textAlignment="center"/>

        <!-- Working Address -->
        <TextView
            android:id="@+id/job_workingAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textAlignment="center"/>

        <!-- Create Time -->
        <TextView
            android:id="@+id/job_createTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Time"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textAlignment="center"/>

    </LinearLayout>

    <!-- Application Date -->
    <TextView
        android:id="@+id/job_applicationDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="5dp"
        android:text="2024-10-22"
        android:textSize="14sp" />
</LinearLayout>
